<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/iiidev/pinda/log/logback/pinda-defaults.xml"/>

    <springProfile name="test,docker,prod">
        <logger name="org.iiidev.pinda.gateway" additivity="true" level="${log.level.controller}">
            <appender-ref ref="ASYNC_CONTROLLER_APPENDER"/>
        </logger>
    </springProfile>

    <springProfile name="dev">
        <logger name="org.iiidev.pinda.gateway" additivity="true" level="info">
            <appender-ref ref="CONTROLLER_APPENDER"/>
        </logger>
    </springProfile>
</configuration>